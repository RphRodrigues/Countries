<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/circular_image_view_height">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/circular_image_avatar"
        android:layout_width="@dimen/app_dimen_19"
        android:layout_height="@dimen/app_dimen_19"
        android:elevation="@dimen/app_dimen_1"
        android:src="@drawable/avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundImageView" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/circular_view_flag"
        android:layout_width="@dimen/app_dimen_9"
        android:layout_height="@dimen/app_dimen_9"
        android:layout_marginStart="@dimen/app_dimen_negative_1"
        android:elevation="@dimen/app_dimen_1"
        android:src="@drawable/indian_flag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/circular_image_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>
