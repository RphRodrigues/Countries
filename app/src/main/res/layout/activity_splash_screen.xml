<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_screen_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash_screen_background"
    tools:context=".presentation.splashscreen.SplashScreenActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/splash_screen_icon_size"
        android:layout_height="@dimen/splash_screen_icon_size"
        android:src="@mipmap/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="@id/splash_screen_content"
        app:layout_constraintEnd_toEndOf="@id/splash_screen_content"
        app:layout_constraintStart_toStartOf="@id/splash_screen_content"
        app:layout_constraintTop_toTopOf="@id/splash_screen_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
